<div class="container">
  <h1>Recipe: <%= label_tag @recipe_model.name %></h1>

  <div class="recipe">
    <%= form_for @recipe_model, :html => {role: 'form'} do |f| %>
        <div class="recipe-items">
          <% @recipe_model.items.each do |item| %>
              <div class="form-group">
                <%= check_box_tag 'done_items[]', item.id, item.done %>
                <%= label_tag item.name, item.name %>
              </div>
          <% end %>
        </div>
        <%= f.submit :class => 'btn btn-default' %>
    <% end %>
  </div>
</div>