<div class="container">
  <h1>Create new recipe</h1>
  <%= form_for @recipe_model, :html => {role: 'form'} do |f| %>
      <div class="form-group">
        <%= f.label :name %>:
        <%= f.text_field :name, :class => 'form-control' %>
        <br/>
      </div>

      <div class="form-group">
        <%= f.label :items_text %>
        <%= text_area_tag :items_text, nil, :class => 'form-control', :rows => 10 %>
        <br/>
      </div>

      <%= f.submit :class => 'btn btn-default' %>
  <% end %>
</div>